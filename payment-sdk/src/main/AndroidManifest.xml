<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <activity
            android:name="payment.sdk.android.cardpayment.visaInstalments.VisaInstallmentsActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/SdkTheme.ThreeDSecure" />
        <activity
            android:name="payment.sdk.android.cardpayment.CardPaymentActivity"
            android:screenOrientation="behind"
            android:theme="@style/SdkTheme.Translucent"
            android:windowSoftInputMode="adjustResize|stateUnchanged" />
        <activity
            android:name="payment.sdk.android.cardpayment.threedsecure.ThreeDSecureWebViewActivity"
            android:theme="@style/SdkTheme.ThreeDSecure" />
        <activity
            android:name="payment.sdk.android.cardpayment.threedsecuretwo.webview.ThreeDSecureTwoWebViewActivity"
            android:theme="@style/SdkTheme.ThreeDSecure" />
        <activity
            android:name="payment.sdk.android.cardpayment.savedCard.SavedCardPaymentActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/SdkTheme.ThreeDSecure"/>
        <activity
            android:name="payment.sdk.android.cardpayment.aaniPay.AaniPayActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"
            android:theme="@style/SdkTheme.ThreeDSecure">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="niannipay" android:host="open" />
            </intent-filter>
        </activity>
        <activity
            android:name="payment.sdk.android.cardpayment.partialAuth.PartialAuthActivity"
            android:theme="@style/SdkTheme.ThreeDSecure"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>